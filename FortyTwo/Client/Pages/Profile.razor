@page "/profile"
@attribute [Authorize]
@layout MainLayout

<h3>Profile</h3>
<hr />

<SpinnerOverlay Visible="IsLoading">
<EditForm Model="@ProfileModel" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="txtEmail">Email address</label>
            <input type="email" class="form-control" id="txtEmail" aria-describedby="emailHelp" value="@User?.Email" disabled>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="filePicture">Picture</label>
            <input id="txtDisplayName" type="text" class="form-control" placeholder="Image Url" value="@User?.Picture" disabled />
            @if (!string.IsNullOrWhiteSpace(User?.Picture))
            {
                <img src="@User?.Picture" class="img img-fluid" />
            }
        </div>
        <div class="form-group">
            <label class="form-check-label" for="exampleCheck1">Theme</label>
            <div class="custom-control custom-switch">
                <input id="chkDarkMode" type="checkbox" class="custom-control-input" disabled>
                <label class="custom-control-label noselect" for="chkDarkMode">Use Dark Theme</label>
            </div>
        </div>
        <div class="form-group">
            <label for="txtDisplayName">Display Name</label>
            <InputText id="txtDisplayName" type="text" class="form-control" placeholder="Display name"
                 @bind-Value="ProfileModel.DisplayName"/>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary" disabled="@(IsLoading || IsSaving)">
                @if (IsSaving)
                {
                    <span class="spinner-border mr-1" role="status"></span>
                }
                @(!IsSaving ? "Save" : "Saving")
            </button>
        </div>
    </EditForm>
</SpinnerOverlay>
