<span class="custom-chip custom-chip-@Context no-hover valign-middle"> @Label @if (Badge != null) { <span class="badge badge-@Context">@Badge</span> }</span>

@code {
    [Parameter]
    public RenderFragment Label { get; set; }

    [Parameter]
    public string Context { get; set; } = "light";

    [Parameter]
    public RenderFragment Badge { get; set; }
}
